                    <div class="pagination mt-4">
                        @if (Model.CurrentPage > 1)
                        {
                            <a href="@Url.Action("Shop", new { page = Model.CurrentPage - 1, sortOrder = sortOrder })">&laquo; Previous</a>
                        }

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <a href="@Url.Action("Shop", new { page = i, sortOrder = sortOrder })" class="@(i == Model.CurrentPage ? "active" : "")">
                                @i
                            </a>
                        }

                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <a href="@Url.Action("Shop", new { page = Model.CurrentPage + 1, sortOrder = sortOrder })">Next &raquo;</a>
                        }
