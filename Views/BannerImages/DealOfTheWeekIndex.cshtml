@model IEnumerable<HouseOfWani.Models.DealOfTheWeek>

@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Banner Images";

}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Banner Images</h2>
        <a class="btn btn-primary" asp-action="DealOfTheWeekCreate">+ Create New</a>
    </div>

    <table class="table table-bordered table-hover table-responsive-sm">
        <thead class="thead-dark">
            <tr>
                <th>ImageUrl </th>
                <th>Title</th>
                <th>Subtitle </th>
                <th>Description</th>
                <th>Subtitle </th>
                <th>DealTitle</th>
                <th>DealEndTime</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" alt="@item.Title" style="max-width: 100px; height: auto;" class="img-thumbnail" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </td>
                    <td>@item.Title</td>
                    <td>@item.Subtitle</td>
                    <td>@item.Description</td>
                    <td>@item.Subtitle</td>
                    <td>@item.DealTitle</td>
                    <td>@item.DealEndTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge badge-success">Active</span>
                        }
                        else
                        {
                            <span class="badge badge-secondary">Inactive</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-outline-info" asp-action="DealOfTheWeekEdit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-sm btn-outline-secondary" asp-action="DealOfTheWeekDetails" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="DealOfTheWeekDelete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
