@model BlogPost
@{
    ViewData["Title"] = "Add/Edit Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="@ViewContext.RouteData.Values["action"]" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
        </div>
        @* <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" />
        </div> *@
        <div class="form-group">
            <label for="Image">Blog image </label>
            <input type="file" class="form-control" id="files" name="files" />
        </div>

        <div class="form-group">
            <label asp-for="Summary"></label>
            <textarea asp-for="Summary" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="ReadMoreUrl"></label>
            <input asp-for="ReadMoreUrl" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Content"></label>
            <input asp-for="Content" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="BlogIndex" class="btn btn-secondary">Cancel</a>
    </form>
</div>
