@model IEnumerable<BlogPost>
@{
    ViewData["Title"] = "Blogs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-4">
    <h2>Manage Blogs</h2>
    <a asp-action="CreateBlog" class="btn btn-success mb-3">Add Blog</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Summary</th>
                <th>Image</th>
                <th>Read More</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.Summary</td>
                  @*    <td><img src="@item.ImageUrl" width="80" /></td> *@
                    <td> <img src="/Blog/@item.ImageUrl" width="80" /></td>
                    @* <td><img src="~/Blog/@item.ImageUrl" width="80" /></td> *@
                    <td><a href="@item.ReadMoreUrl" target="_blank">Link</a></td>
                    <td>
                        <a asp-action="EditBlog" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="DeleteBlog" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
