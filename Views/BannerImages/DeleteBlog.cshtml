@model BlogPost
@{
    ViewData["Title"] = "Delete Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <h3>Are you sure you want to delete this blog?</h3>
    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Summary</dt>
        <dd class="col-sm-9">@Model.Summary</dd>
    </dl>
    <form asp-action="DeleteBlog">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="BlogIndex" class="btn btn-secondary">Cancel</a>
    </form>
</div>
