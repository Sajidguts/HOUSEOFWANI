@using HouseOfWani.Models.Order
@model Order

@{
    ViewData["Title"] = "Order Successful";
}

<div class="container my-5">
    <div class="text-center">
        <h2 class="text-success">🎉 Thank you for your purchase!</h2>
        <p class="lead">Your order <strong>#@Model.Id</strong> has been placed successfully on <strong>@Model.OrderDate.ToString("dd MMM yyyy")</strong>.</p>
    </div>

    <hr />

    <h4>Order Details</h4>
    <table class="table table-bordered table-striped mt-3">
        <thead class="table-dark">
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price (Each)</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Product.Name </td>
                    <td>@item.Quantity</td>
                    <td>₹@item.PriceAtPurchase.ToString("0.00")</td>
                    <td>₹@(item.PriceAtPurchase * item.Quantity).ToString("0.00")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Total:</th>
                <th>₹@Model.TotalAmount.ToString("0.00")</th>
            </tr>
        </tfoot>
    </table>

    <div class="text-center mt-4">
        <a href="/" class="btn btn-primary">Continue Shopping</a>
    </div>
</div>
