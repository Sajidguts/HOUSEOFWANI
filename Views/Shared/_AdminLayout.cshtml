<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HouseOfWani</title>

    <link href="@Url.Content("~/css/elegant-icons.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/font-awesome.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/magnific-popup.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/owl.carousel.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/nice-select.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/slicknav.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/style.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/style.css.map")" rel="stylesheet" />


</head>
<body>
    @inject IHttpContextAccessor HttpContextAccessor
    @{
        var userRole=HttpContextAccessor.HttpContext.Session.GetString("UserRole")?? "Guest";
        // var userRole = TempData["UserRole"]?.ToString() ?? "Guest";
    }

    <!-- Header -->
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-7">
                        <div class="header__top__left">
                            <p>Free shipping, 30-day return or refund guarantee.</p>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-5">
                        <div class="header__top__right">
                            <div class="header__top__links">
                                @* <a href="#">Sign in</a> *@

                                @if (userRole == "Guest")
                                {
                                    <a asp-controller="Account" asp-action="Login">Sign in</a>

                                    <a asp-controller="Account" asp-action="Register">Register</a>
                                }
                                @if (userRole == "Admin" || userRole == "User")
                                {

                                    <a asp-controller="Account" asp-action="Logout">Logout</a>

                                }

                                <a href="#">FAQs</a>
                            </div>
                            <div class="header__top__hover">
                                <span>Usd <i class="arrow_carrot-down"></i></span>
                                <ul>
                                    <li>AED</li>
                                    <li>USD</li>
                                    <li>INR</li>
                                    <li>PKR</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <div class="header__logo">
                        <a href="/"><img src="/img/logo.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <nav class="header__menu mobile-menu">
                        <ul>
                            <li class="active"><a href="/Admin/index">Home</a></li>
                            @* <li><a asp-controller="Admin" asp-action="AddCountryWithCurrency">Country</a></li>
                            <li><a asp-controller="Admin" asp-action="Currency">Currency</a></li> *@
                            <li>
                                <a href="#">Pages</a>
                                <ul class="dropdown">
                                    <li><a asp-controller="Admin" asp-action="CreateSize">Sizes</a></li>
                                    @* <li><a asp-controller="BannerImages" asp-action="Index">UserIndex</a></li> *@
                                    @*   <li><a asp-controller="Home" asp-action="ShopDetails">Shop Details</a></li>
                                    <li><a asp-controller="Home" asp-action="ShoppingCart">Shopping Cart</a></li>
                                    <li><a asp-controller="Home" asp-action="CheckOut">Check Out</a></li>
                                    <li><a asp-controller="Home" asp-action="BlogDetails">Blog Details</a></li> *@
                                </ul>
                            </li>
                            <li>
                                <a href="#">USER</a>
                                <ul class="dropdown">
                                    <li><a asp-controller="BannerImages" asp-action="Index">Index</a></li>
                                    <li><a asp-controller="BannerImages" asp-action="BlogIndex">BlogPost</a></li>
                                    <li><a asp-controller="BannerImages" asp-action="DealOfTheWeekIndex">DealOfTheWeek</a></li>
                                    <li><a asp-controller="BannerImages" asp-action="InstagramPost">InstagramPost</a></li>

                                    @*   <li><a asp-controller="Home" asp-action="ShopDetails">Shop Details</a></li>
                                    <li><a asp-controller="Home" asp-action="ShoppingCart">Shopping Cart</a></li>
                                    <li><a asp-controller="Home" asp-action="CheckOut">Check Out</a></li>
                                    <li><a asp-controller="Home" asp-action="BlogDetails">Blog Details</a></li> *@
                                </ul>
                            </li>
                           @*  <li><a asp-controller="Home" asp-action="Blog">Blog</a></li>
                            <li><a asp-controller="Home" asp-action="Contact">Contacts</a></li> *@
                          @*   @if (userRole == "Admin")
                            {
                                <li>
                                    <a asp-controller="Products" asp-action="Index">Add Product</a>
                                </li>
                            } *@

                        </ul>

                    </nav>
                </div>
                <div class="col-lg-3 col-md-3">
                    <div class="header__nav__option">
                        <a href="#" class="search-switch"><img src="/img/icon/search.png" alt=""></a>
                        <a href="#"><img src="/img/icon/heart.png" alt=""></a>
                        <a href="#"><img src="/img/icon/cart.png" alt=""> <span>0</span></a>
                        <div class="price">$0.00</div>
                    </div>
                </div>
            </div>
            <div class="canvas__open"><i class="fa fa-bars"></i></div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Section Begin -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="footer__about">
                        <div class="footer__logo">
                            <a href="#"><img src="/img/footer-logo.png" alt=""></a>
                        </div>
                        <p>The customer is at the heart of our unique business model, which includes design.</p>
                        <a href="#"><img src="/img/payment.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-2 offset-lg-1 col-md-3 col-sm-6">
                    <div class="footer__widget">
                        <h6>Shopping</h6>
                        <ul>
                            <li><a href="#">Clothing Store</a></li>
                            <li><a href="#">Trending Shoes</a></li>
                            <li><a href="#">Accessories</a></li>
                            <li><a href="#">Sale</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6">
                    <div class="footer__widget">
                        <h6>Shopping</h6>
                        <ul>
                            <li><a href="#">Contact Us</a></li>
                            <li><a href="#">Payment Methods</a></li>
                            <li><a href="#">Delivary</a></li>
                            <li><a href="#">Return & Exchanges</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 offset-lg-1 col-md-6 col-sm-6">
                    <div class="footer__widget">
                        <h6>NewLetter</h6>
                        <div class="footer__newslatter">
                            <p>Be the first to know about new arrivals, look books, sales & promos!</p>
                            <form action="#">
                                <input type="text" placeholder="Your email">
                                <button type="submit"><span class="icon_mail_alt"></span></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="footer__copyright__text">
                        <p>
                            Copyright ©
                            <script>
                                document.write(new Date().getFullYear());
                            </script>2020
                            All rights reserved | This template is made with <i class="fa fa-heart-o"
                                                                                aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->
    <!-- Search Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Search here.....">
            </form>
        </div>
    </div>
    <!-- Search End -->

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script src="/js/jquery.nice-select.min.js"></script>
    <script src="/js/jquery.nicescroll.min.js"></script>
    <script src="/js/jquery.magnific-popup.min.js"></script>
    <script src="/js/jquery.countdown.min.js"></script>
    <script src="/js/jquery.slicknav.js"></script>
    <script src="/js/mixitup.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/main.js"></script>





</body>
</html>
