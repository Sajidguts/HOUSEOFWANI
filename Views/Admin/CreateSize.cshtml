@using HouseOfWani.Models.Admin
@model List<string>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create Size";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <form asp-action="CreateSize">
     
        <div class="row">
            <div class="col-12">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="sizes" value="S" id="sizeSmall">
                    <label class="form-check-label" for="sizeSmall">Small</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="sizes" value="M" id="sizeMedium">
                    <label class="form-check-label" for="sizeMedium">Medium</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="sizes" value="L" id="sizeLarge">
                    <label class="form-check-label" for="sizeLarge">Large</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="sizes" value="XL" id="sizeXL">
                    <label class="form-check-label" for="sizeXL">Extra Large</label>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save Sizes</button>
    </form>

    <!-- Error or Success message -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mt-3">@TempData["Error"]</div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["Success"]</div>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
