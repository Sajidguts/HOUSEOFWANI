@using HouseOfWani.Models.Admin
@model Product

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create";
    var sizes = ViewBag.Sizes as SelectList;
   
}

<h1>Create</h1>

<form id="CreateFormOtp" asp-action="Create" method="post" enctype="multipart/form-data">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="DiscountedPrice" class="control-label"></label>
                    <input asp-for="DiscountedPrice" class="form-control" />
                    <span asp-validation-for="DiscountedPrice" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label for="Image">Image</label>
                <input type="file" class="form-control" id="file" name="file" />
            </div>
           @*  <div class="form-group">
                <label for="Image">Image</label>
                <input type="file" class="form-control" id="ImageFile" name="file" />
            </div> *@
            <div class="form-group">
                <label asp-for="Qauntity" class="control-label"></label>
                    <input asp-for="Qauntity" class="form-control" />
                    <span asp-validation-for="Qauntity" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label for="ProductSizes">Select Sizes</label>
                    <div class="form-group">
                        @foreach (var size in sizes)
                        {
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="selectedSizes" value="@size.Value" id="size_@size.Value" />
                                <label class="form-check-label" for="size_@size.Value">@size.Text</label>
                            </div>
                        }
                    </div>

                @*     <label for="Sizes">Select Sizes</label>
                    <select asp-for="ProductSizes" class="form-control" multiple="multiple" id="Sizes" name="selectedSizes">
                        @foreach (var size in ViewData["Sizes"] as SelectList)
                        {
                            <option value="@size.Value">@size.Text</option>
                        }
                    </select> *@
                </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
